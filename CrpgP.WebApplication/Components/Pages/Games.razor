@page "/games"
@using CrpgP.WebApplication.Models;
@using CrpgP.WebApplication.Services
@inject ApiService ApiService

<PageTitle>Games</PageTitle>

<div class="content">
    <div class="content-body">
        <div class="content-section games">
            <div class="section-title">
                <h2>All Games</h2>
            </div>
            <div class="games-grid container-fluid">
                @if (_games == null)
                {
                    <p>
                        <em>Loading Games...</em>
                    </p>
                }
                else
                {
                    <div class="row">
                        @foreach (var game in _games)
                        {
                            <div class="col-md-3 game-box">
                                <div class="logo-container">
                                    <a href="/game/@game.Id">
                                        <img class="logo" src="./images/placeholder-600x600.png" alt="Game image">
                                    </a>
                                </div>
                                <div class="game-details">
                                    @* <div>Id: @game.Id</div> *@
                                    <div>@game.Name</div>
                                    <div>Portrait Size: @game.PortraitSize.Width x @game.PortraitSize.Height</div>
                                    <div>Release Date: 01/01/2000</div>
                                    
                                    <div class="external">
                                        <div>Store Icons</div>
                                    </div>
                                    
                                    <div class="game-page">
                                        <a href="/game/@game.Id">Game Page</a>
                                    </div>
                                    
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@code
{
    private IEnumerable<GameModel>? _games;

    protected override async Task OnInitializedAsync()
    {
        _games = await ApiService.GetAllGames();
    }
}